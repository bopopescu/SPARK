sudo tc qdisc del dev eth0 root
sudo tc qdisc del dev eth3 root

sudo tc qdisc add dev eth0 handle 1: root htb default 11
sudo tc class add dev eth0 parent 1: classid 1:1 htb rate 300kbps
sudo tc class add dev eth0 parent 1:1 classid 1:11 htb rate 300kbps


sudo tc qdisc add dev eth3 handle 1: root htb default 11
sudo tc class add dev eth3 parent 1: classid 1:1 htb rate 300kbps
sudo tc class add dev eth3 parent 1:1 classid 1:11 htb rate 300kbps

# tc qdisc show dev eth0
# tc qdisc show dev eth1
#route

# 1 mbps -> 0.5 kbps
# 10 mbps -> 6 kbps
# 12 mbps -> 10 kbps
# 100 mbps -> 60 kbps
# 200 mbps -> 100 kbps
# 400 mbps -> 200 kbps
# 550 mbps -> 300 kbps